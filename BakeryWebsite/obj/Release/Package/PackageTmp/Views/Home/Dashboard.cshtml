@{
    ViewBag.Title = "Home Page";
}
<header id="header">
    <img src="/assets/img/bg-hero.jpg" srcset="/assets/img/bg-hero@2x.jpg 2x" width="1920" height="150" alt="hero back" class="header-back">
    <div class="container">
        <div class="main-nav">
            <ul>
                <li><a href="#">Home</a></li>
                <li><a href="#">Features</a></li>
                <!--<li>@Html.ActionLink("Dashboard", "Dashboard", "Home")</li>-->
                <li><a href="#contact">Contact Us</a></li>
            </ul>
        </div>
    </div>
</header>
<main id="main">
    <section class="section hero">
        <img src="/assets/img/bg-hero.jpg" srcset="/assets/img/bg-hero@2x.jpg 2x" width="1920" height="150" alt="hero back" class="hero-back">
    </section>
    <section class="section section-white section-features">
        <div class="container">
            <h2 class="text-center">Our Features</h2>
            <div class="blocks-holder">
                <div class="block">
                    <div class="icon-holder">
                        <img src="/assets/img/ico-anonymous.png" srcset="/assets/img/ico-anonymous@2x.png 2x" width="87" height="89" alt="Anonymity">
                    </div>
                    <div class="text-holder">
                        <h3>Anonymity</h3>
                        <div class="description">
                            <p>No sign-up required as well as any other personal information - we respect your privacy.</p>
                        </div>
                    </div>
                </div>
                <div class="block">
                    <div class="icon-holder">
                        <img src="/assets/img/ico-offer.png" srcset="/assets/img/ico-offer@2x.png 2x" width="88" height="88" alt="9% Fee">
                    </div>
                    <div class="text-holder">
                        <h3>9% Fee</h3>
                        <div class="description">
                            <p>Dynamic payment model. Rewards are calculated using current inflation of the system.</p>
                        </div>
                    </div>
                </div>
                <div class="block">
                    <div class="icon-holder">
                        <img src="/assets/img/ico-delivery.png" srcset="/assets/img/ico-delivery@2x.png 2x" width="101" height="66" alt="Frequent Payments">
                    </div>
                    <div class="text-holder">
                        <h3>Frequent Payments</h3>
                        <div class="description">
                            <p>Your baking rewards are promtly distributed on the beginning of every cycle.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="section section-white section-wallet">
        <div class="container">
            <h2 class="text-center">How To Delegate With Magnum Wallet</h2>
            <div class="wallet-holder">
                <div class="wallet-block">
                    <div class="top">
                        <div class="iframe-holder">
                            <iframe width="510" height="285" src="https://www.youtube.com/embed/kUDUfR07jws" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                        </div>
                        <div class="image-holder">
                            <img src="/assets/img/bg-magnum-wallet.jpg" srcset="/assets/img/bg-magnum-wallet@2x.jpg 2x" width="230" height="218" alt="Magnum Wallet">
                        </div>
                    </div>
                    <div class="bottom">
                        <div class="description text-center">
                            <p>Supported Platform: Web Wallet, Android</p>
                            <p>Hardware Wallets Supported: Ledger Nano S, Ledger Nano X, Trezor Model T</p>
                        </div>
                    </div>
                </div>
            </div>
            <h2 class="text-center">How To Delegate With Galleon Wallet</h2>
            <div class="wallet-holder">
                <div class="wallet-block">
                    <div class="top">
                        <div class="iframe-holder">
                            <iframe width="510" height="285" src="https://www.youtube.com/embed/-F1vaVv8HlM" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                        </div>
                        <div class="image-holder">
                            <img src="/assets/img/bg-galleon-wallet.png" srcset="/assets/img/bg-galleon-wallet@2x.png 2x" width="237" height="250" alt="Galleon Wallet">
                        </div>
                    </div>
                    <div class="bottom">
                        <div class="description text-center">
                            <p>Supported Platform: macOS, Windows, Linux(deb)</p>
                            <p>Hardware Wallets Supported: Ledger Nano S</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
